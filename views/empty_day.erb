<p> There are no meals for <%= @current_day.day_of_week %> yet</p>
  <details>
  <summary>Add a meal ?</summary>
  
    <form action="/<%= @current_day.day_of_week %>/add_meal" method="post">
      <fieldset>
        <legend>Select the type of meal to add</legend>
        <dl>
          <% @open_meal_types.each do |type| %>
            <dt>
              <label for="add_<%= type %>"><%= type %></label>
            </dt>
            <dd>
              <input type="radio" name="type" id="add_<%= type %>" value="<%= type %>">
            </dd>
          <% end %>
        </dl>
      </fieldset>
      <button type="submit">Save</button>
    </form>
  </details>

<% content_for :crumb_nav do %>
    <a href="/">Home/ </a><a href="/<%= @current_day.day_of_week %>"><%= @current_day.day_of_week %>/ </a> 
<% end %>